generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id        String   @id @default(cuid())
  name      String
  email     String
  content   String
  createdAt DateTime @default(now())

  @@index([createdAt])
  @@map("messages")
}

model Admin {
  id        String  @id @default(cuid())
  name      String
  email     String  @unique
  password  String
  posts Post[]

  @@map("admins")
}

model Post {
  id         Int        @id @default(autoincrement())
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  title      String
  published  Boolean    @default(false)
  author     Admin      @relation(fields: [authorId], references: [id])
  authorId   String
  categories Category[]
  @@map("posts")
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String
  posts Post[]
  @@map("categories")
}